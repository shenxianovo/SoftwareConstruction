<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="HW05.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HW05">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            <!-- Other app resources here -->
            <Style TargetType="Button" x:Key="CalcButtonStyle" BasedOn="{StaticResource DefaultButtonStyle}">
                <Setter Property="Width" Value="75"/>
                <Setter Property="Height" Value="70"/>
                <Setter Property="FontSize" Value="30"/>
                <Setter Property="KeyboardAcceleratorPlacementMode" Value="Hidden"/>
                <Setter Property="CornerRadius" Value="15"/>
                <Setter Property="FontFamily" Value="/Assets/Cascadia Mono.ttf#Cascadia Mono"/>
            </Style>
            <Style TargetType="TextBlock" x:Key="CalcTextBlockStyle">
                <Setter Property="FontSize" Value="45"/>
                <Setter Property="Width" Value="300"/>
                <Setter Property="Height" Value="75"/>
                <Setter Property="TextAlignment" Value="Right"/>
                <Setter Property="FontFamily" Value="/Assets/Cascadia Mono.ttf#Cascadia Mono"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
